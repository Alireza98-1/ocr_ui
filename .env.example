# ==================================
# Final .env for Production Docker
# ==================================

# --- RabbitMQ Credentials ---
# These are used to set up the RabbitMQ container AND to connect Celery to it.
RABBITMQ_USER=ocr_user
RABBITMQ_PASS=strong_password_change_me


# --- Celery Configuration (For Docker) ---
# CRITICAL: 'localhost' is replaced with the service names from docker-compose.yml.
# This is how containers talk to each other in a Docker network.
CELERY_BROKER_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASS}@rabbitmq:5672//
CELERY_BACKEND_URL=redis://redis:6379/0


# --- Application Settings ---
APP_NAME="Unified OCR Service"

# Set to 'true' in development if your webhook endpoint doesn't use HTTPS.
# For production, this should always be 'false'.
ALLOW_INSECURE_WEBHOOKS=True
